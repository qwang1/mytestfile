{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pod-onecontainer-g",
        "labels": {
            "name": "pod-onecontainer-g"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "pod-onecontainer-g-c1",
                "image": "jhou/hello-openshift-fedora",
                "resources": {
                    "limits": {
                        "cpu": "900m",
                        "memory": "900Mi"
                    },
                    "requests": {
                        "cpu": "900m",
                        "memory": "900Mi"
                    }
                },
                "ports": [
                    {
                        "containerPort": 8081,
                        "protocol": "TCP"
                    }
                ],
                "imagePullPolicy": "IfNotPresent"
            }
        ],
        "restartPolicy": "Always"
    }
}
